---
// Import Astro's Image component
import { Image } from 'astro:assets';
import '@/styles/global.css';
import '@fontsource/poppins/400.css';
import '@fontsource/poppins/500.css';
import '@fontsource/poppins/600.css';
import '@fontsource/poppins/700.css';
import '@fontsource-variable/advent-pro';

// Import all event images
import innov8 from '../images/events/innov8.png';
import castilloCuantico from '../images/events/castillo_cuantico.png';
import dataChallenge from '../images/events/data_challenge.png';
import csot from '../images/events/csot.png';
import intelGenai from '../images/events/intel_genai.png';
import pokeseek from '../images/events/pokeseek.png';
import quantKeFundae from '../images/events/quant_k_fundae.png';
import quantsArena from '../images/events/quants_arena.png';
import tos from '../images/events/tos.png';
import shipathon from '../images/events/shipathon.png';
import stateOfEnterprise from '../images/events/state_of_enterprise.png';
import lecture from '../images/events/lecture.jpg';
import upcoming from '../images/assets/upcoming.png'
import logo from '../images/assets/aries_logo.png'

import { Navigation } from '@/components/Navigation';
import Layout from '@/layouts/Layout.astro';
---

<Layout title="Events - ARIES IITD">
    <Navigation client:load />
        <!-- ======================= HERO SECTION ======================= -->
        <section class="events-hero">
          <div class="hero-text-content">
            <h1>Our Events</h1>
            <p>Engage, Learn and Innovate with ARIES</p>
          </div>
        </section>
      
      
        <!-- ======================= EVENTS CONTENT ======================= -->
        <main class="all-events">
          <div class="events-tabs">
            <button id="upcoming-btn" class="tab-button active">Upcoming Events</button>
            <button id="past-btn" class="tab-button">Past Events</button>
          </div>
          
          <div class="events-container">
            
            <div id="upcoming-events">
              <div class="events-grid">
                <div class="event-card">
                  <Image src={upcoming} alt="NOT-A-LECTURE"/>
                  <div class="event-card-content">
                    <h3>NOT-A-LECTURE</h3>
                    <div class="event-details">
                      <span>🗓️ TBD</span>
                      <span>📍 IIT Delhi Campus</span>
                    </div>
                    <p class="event-description">Interactive series of sessions conducted by our Executives who take you from 0 to 1. New Week New Skill.</p>
                  </div>
                </div>
                <div class="event-card">
                  <Image src={upcoming} alt="Guest Lecture: Dr. Smith"/>
                  <div class="event-card-content">
                    <h3>Guest Lecture: Vansh Ramani</h3>
                    <div class="event-details">
                      <span>🗓️ TBD</span>
                      <span>📍 Online</span>
                    </div>
                    <p class="event-description">Interactive session with Mr. Vansh Ramani. A student of IIT Delhi with numerous research papers published in various domains ranging from Neural Networks to AI.</p>
                  </div>
                </div>
              </div>
            </div>
            
            <div id="no-upcoming-events" class="no-events" style="display: none;">
              <p>No upcoming events scheduled. Check back later!</p>
            </div>
      
            <div id="past-events" style="display: none;">
              <div class="events-grid">
                <!-- Card 1-24 (content is unchanged) -->
                // {
                  //   title: "ARIES Bootcamp",
                  //   description: "A 6 week long training camp where students are posed with new learnings and challenges every single day .",
                  //   link: "#",
                  //   github: "#",
                  //   category: "ML Fundamentals",
                  //   techStack: ["Python", "PyTorch", "OpenCV", "NumPy"],
                  //   featured: true,
                  //   image: "https://placehold.co/600x400.png",
                  //   team: []
                  // },
                <div class="event-card"><Image src={logo} alt="ARIES Bootcamp"/><div class="event-card-content"><h3>ARIES Bootcamp</h3><div class="event-details"><span>🗓️ May-July 2025</span><span>📍 IIT Delhi</span></div><p class="event-description">A 6 week long training camp where students are posed with new learnings and challenges every single day.</p></div></div>
                <div class="event-card"><Image src={innov8} alt="Innov8 2.0 Hackathon"/><div class="event-card-content"><h3>Innov8 2.0 Hackathon</h3><div class="event-details"><span>🗓️ 27 - 29 Mar 2025</span><span>📍 IIT Delhi</span></div><p class="event-description">A hands-on NLP challenge where students built tools to extract keywords and rank resumes based on job queries — tackling a real-world AI use-case.. Winners got cash prizes, and everyone left with merch and some serious learning.</p></div></div>
                <div class="event-card"><Image src={castilloCuantico} alt="Castillo Cuantico"/><div class="event-card-content"><h3>Castillo Cuantico</h3><div class="event-details"><span>🗓️ 20 Oct 2024</span><span>📍 Online</span></div><p class="event-description">ARIES partnered with Citadel Securities to host Citadel Cuantico on October 20, 2024 — a hands-on offline session and competition diving deep into AI/ML applications in quantitative finance. The event kicked off with an industry talk sharing real-world insights, Participants took on a data challenge based on actual financial problems. Winners earned exciting prizes, and all attendees received exclusive Citadel swag.</p></div></div>
                <div class="event-card"><Image src={dataChallenge} alt="Data Challenge"/><div class="event-card-content"><h3>Data Challenge</h3><div class="event-details"><span>🗓️ 2 Mar 2025</span><span>📍 IIT Delhi</span></div><p class="event-description">In collaboration with Qube Research & Technologies, hosted an exciting Data Challenge on March 2, 2025. Participants dived into the world of machine learning and finance by working on real financial datasets and solving complex problems using ML and statistics.</p></div></div>
                <div class="event-card"><Image src={csot} alt="CSoT"/><div class="event-card-content"><h3>CSoT</h3><div class="event-details"><span>🗓️ 10 Mar 2025</span><span>📍 Online</span></div><p class="event-description"> a 2 month summer bootcamp organised by caic in partnerships with the tech backbones of iitd . empowers students in many domains ranging from software development to mathematics to sustainability.</p></div></div>
                <div class="event-card"><Image src={intelGenai} alt="Intel Gen-AI Hackathon"/><div class="event-card-content"><h3>Intel Gen-AI Hackathon</h3><div class="event-details"><span>🗓️ 30 Mar 2024</span><span>📍 IIT Delhi</span></div><p class="event-description">not just a normal hackathon , its an experience that really shapes and sharpens your skills.</p></div></div>
                <div class="event-card"><Image src={pokeseek} alt="Pokeseek"/><div class="event-card-content"><h3>Pokeseek</h3><div class="event-details"><span>🗓️ 22 Sep 2020</span><span>📍 Online</span></div><p class="event-description">A beginner-friendly workshop on using Python libraries like NumPy and Pandas.</p></div></div>
                <div class="event-card"><Image src={quantKeFundae} alt="Quant Ke Fundae"/><div class="event-card-content"><h3>Quant Ke Fundae</h3><div class="event-details"><span>🗓️ 8 Mar 2024</span><span>📍 Online</span></div><p class="event-description">:a break from solving problems, and a step towards technology. Machine learning and finance are hot sectors, and leveraging their combined power is of immense importance in modern finance/quant roles. In this session, we cover applications of ML in Finance, from complete basics.</p></div></div>
                <div class="event-card"><Image src={quantsArena} alt="Quants Arena"/><div class="event-card-content"><h3>Quants Arena</h3><div class="event-details"><span>🗓️ 5 July 2024</span><span>📍 IIT Delhi</span></div><p class="event-description">Bootcamp covering the basics of image processing and computer vision.</p></div></div>
                <div class="event-card"><Image src={tos} alt="Tour of Stalls"/><div class="Tour of Stalls"><h3>Tour of Stalls</h3><div class="event-details"><span>🗓️ 25 Aug 2024</span><span>📍 IIT Delhi</span></div><p class="event-description">A display of fun activities and games in the TOS event conducted by BRCA IITD to introduce various clubs to freshers.</p></div></div>
                <div class="event-card"><Image src={shipathon} alt="Ship-A-Thon"/><div class="event-card-content"><h3>Ship-A-Thon</h3><div class="event-details"><span>🗓️ 31 Jan 2025</span><span>📍 Online</span></div><p class="event-description"> A collaboration between ARIES and eDC IIT Delhi, was a unique 4-week startup-building competition aimed at transforming raw ideas into impactful prototypes.. With over 220 registrations and 62 teams formed, participants engaged in a pipeline that spanned ideation, mentorship, MVP development, and industry jury pitching.12 MVPs were developed, and 5 teams explored real funding opportunities—making it a launchpad for aspiring entrepreneurs within the IIT Delhi campus.</p></div></div>
                <div class="event-card"><Image src={stateOfEnterprise} alt="The Development and state of Entreprise AI today"/><div class="event-card-content"><h3>The Development and state of Entreprise AI today</h3><div class="event-details"><span>🗓️ 4 Sep 2024</span><span>📍 IIT Delhi</span></div><p class="event-description">A hands-on session for mastering version control with Git.</p></div></div>
              </div>
              <div class="view-more-container">
                  <button id="view-more-btn" class="view-more-btn">View More</button>
              </div>
            </div>
          </div>
        </main>

        <!-- SCRIPT IS UNCHANGED -->
        <script>
          document.addEventListener('DOMContentLoaded', function() {
            // --- Tab Switching Logic ---
            const upcomingBtn = document.getElementById('upcoming-btn');
            const pastBtn = document.getElementById('past-btn');
            const upcomingEventsSection = document.getElementById('upcoming-events');
            const pastEventsSection = document.getElementById('past-events');
            const noEventsMessage = document.getElementById('no-upcoming-events');
      
            function checkUpcomingEvents() {
              if (upcomingEventsSection?.querySelector('.events-grid')?.children.length === 0) {
                upcomingEventsSection!.style.display = 'none';
                noEventsMessage!.style.display = 'block';
              } else {
                upcomingEventsSection!.style.display = 'block';
                noEventsMessage!.style.display = 'none';
              }
            }
      
            checkUpcomingEvents();
      
            upcomingBtn?.addEventListener('click', function() {
              checkUpcomingEvents();
              pastEventsSection!.style.display = 'none';
              upcomingBtn?.classList.add('active');
              pastBtn?.classList.remove('active');
            });
      
            pastBtn?.addEventListener('click', function() {
              pastEventsSection!.style.display = 'block';
              upcomingEventsSection!.style.display = 'none';
              noEventsMessage!.style.display = 'none';
              pastBtn?.classList.add('active');
              upcomingBtn?.classList.remove('active');
            });
      
            // --- "View More" Logic for Past Events ---
            const viewMoreBtn = document.getElementById('view-more-btn');
            const pastCards = document.querySelectorAll('#past-events .event-card');
            const cardsPerLoad = 3;
            const initialVisibleCards = 3;
      
            pastCards.forEach((card, index) => {
              if (index >= initialVisibleCards) {
                card.classList.add('hidden');
              }
            });
      
            if (pastCards.length <= initialVisibleCards) {
              viewMoreBtn!.style.display = 'none';
            }
      
            viewMoreBtn?.addEventListener('click', function() {
              const hiddenCards = document.querySelectorAll('#past-events .event-card.hidden');
              
              for (let i = 0; i < cardsPerLoad; i++) {
                if (hiddenCards[i]) {
                  hiddenCards[i].classList.remove('hidden');
                }
              }
              
              if (document.querySelectorAll('#past-events .event-card.hidden').length === 0) {
                viewMoreBtn!.style.display = 'none';
              }
            });
          });
        </script>
    <style>
        /* STYLES FOR EVENTS PAGE */
    :root {
      --bg-primary: #100f15;
      --bg-secondary: #1a1a1f;
      --text-primary: #e0e0e0;
      --text-secondary: #100f15;
      --accent-color: #8a4fff;
    }

    body {
        margin: 0;
        font-family: 'Segoe UI', 'Intel', sans-serif;
        color: var(--text-primary);
        background-color: var(--bg-primary); 
        position: relative;
    }
    
    body::before {
        content: '';
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background-image: url('/star_2.svg');
        background-size: cover;
        background-position: center;
        z-index: -2; 
    }

    footer {
        background-color: transparent; 
    }

    /* === HERO SECTION STYLES === */
    .events-hero {
        position: relative; 
        height: 85vh; 
        min-height: 600px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        overflow: hidden;
    }

    .events-hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('/solar_system.png');
        background-size: contain;
        background-repeat: no-repeat;
        background-position: center;
        opacity: 0.7; 
        z-index: -1; 
    }
    
    .hero-text-content {
        position: relative;
        z-index: 1;
    }

    .hero-text-content h1 {
        font-size: clamp(3rem, 8vw, 5rem);
        font-weight: 800;
        margin-bottom: 1rem;
        text-shadow: 0 4px 20px rgba(0,0,0,0.6);
        color: white;
    }

    .hero-text-content p {
        font-size: clamp(1.2rem, 4vw, 1.8rem);
        opacity: 0.9;
        font-weight: 400;
        max-width: 800px;
        margin: 0 auto;
        text-shadow: 0 2px 10px rgba(0,0,0,0.5);
        color: white;
    }

    .all-events {
      padding: 4rem 2rem 4rem;
      max-width: 1200px;
      margin: 0 auto;
      background-color: transparent;
    }
    
    .events-tabs {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-bottom: 3rem;
        padding: 0.5rem;
        background: var(--bg-secondary);
        border-radius: 50px;
        max-width: fit-content;
        margin-left: auto;
        margin-right: auto;
    }
    
    .tab-button {
      padding: 0.7rem 1.5rem;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      border-radius: 30px;
      transition: all 0.3s ease;
      border: 1px solid transparent;
      background: transparent;
      color: var(--text-primary);
    }
    
    .tab-button.active {
      background: var(--accent-color);
      color: white;
      font-weight: 700;
      border-color: var(--accent-color);
    }
    
    .tab-button:not(.active):hover {
      background-color: rgba(255, 255, 255, 0.1);
    }
    
    .events-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 2rem;
    }

    .event-card {
        background: var(--bg-secondary);
        border-radius: 15px;
        overflow: hidden;
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .event-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
    }

    .event-card img {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .event-card-content {
        padding: 1.5rem;
    }

    .event-card-content h3 {
        margin-top: 0;
        font-size: 1.5rem;
        color: white;
    }

    .event-card .event-details {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        margin: 1rem 0;
        font-size: 0.9rem;
        opacity: 0.8;
    }

    .event-card .event-details span {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    /* === NEW: DESCRIPTION REVEAL ON HOVER === */
    .event-card .event-description {
        font-size: 1rem;
        line-height: 1.6;
        /* Hide by default */
        max-height: 0;
        opacity: 0;
        overflow: hidden;
        margin-top: 0; /* Remove margin when hidden */
        /* Smooth transition for reveal */
        transition: max-height 0.4s ease-in-out, opacity 0.3s ease-in-out, margin-top 0.4s ease-in-out;
    }

    /* On card hover, reveal the description */
    .event-card:hover .event-description {
        max-height: 200px; /* A large enough value to show all content */
        opacity: 0.9;
        margin-top: 1rem; /* Add some space when it appears */
    }
    /* === END OF NEW STYLES === */

    .no-events {
        text-align: center;
        padding: 4rem 2rem;
        background: var(--bg-secondary);
        border-radius: 15px;
    }
    .no-events p {
        font-size: 1.2rem;
        opacity: 0.8;
    }

    .view-more-container { text-align: center; margin-top: 2.5rem; margin-bottom: 1rem; }
    .view-more-btn { padding: 0.8rem 2.5rem; font-size: 1rem; font-weight: 600; cursor: pointer; border-radius: 30px; transition: all 0.3s ease; border: 1px solid var(--accent-color); background: transparent; color: var(--accent-color); text-transform: uppercase; letter-spacing: 1px; }
    .view-more-btn:hover { background: var(--accent-color); color: white; transform: translateY(-2px); box-shadow: 0 4px 15px rgba(138, 79, 255, 0.3); }
    .event-card.hidden { display: none; }
    </style>
</Layout>