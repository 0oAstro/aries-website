---
// Footer component with social media links and email subscription
import { IconBrandInstagram, IconBrandWhatsapp, IconBrandTwitter, IconBrandGithub, IconBrandLinkedin, IconMail } from "@tabler/icons-react";
---

<footer id="contact" class="bg-black border-t border-neutral-800 text-white py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12">
      
      <!-- Left side - Social Media Links -->
      <div class="flex flex-col space-y-6">
        <div>
          <h3 class="text-lg font-semibold mb-4 text-white">Connect With Us</h3>
          <div class="flex space-x-6">
            
            <!-- Instagram -->
            <a 
              href="https://www.instagram.com/aries.iitd" 
              class="group flex items-center justify-center w-10 h-10 rounded-full bg-neutral-800 hover:bg-gradient-to-br hover:from-purple-500 hover:via-pink-500 hover:to-orange-500 transition-all duration-300"
              aria-label="Follow us on Instagram"
            >
              <IconBrandInstagram/>
            </a>

            <!-- WhatsApp -->
            <a 
              href="https://chat.whatsapp.com/D98xdCtosjr2d8wchQJSvL" 
              class="group flex items-center justify-center w-10 h-10 rounded-full bg-neutral-800 hover:bg-green-500 transition-all duration-300"
              aria-label="Message us on WhatsApp"
            >
              <IconBrandWhatsapp/>
            </a>

            <!-- Twitter -->
            <a 
              href="#" 
              class="group flex items-center justify-center w-10 h-10 rounded-full bg-neutral-800 hover:bg-blue-400 transition-all duration-300"
              aria-label="Follow us on Twitter"
            >
              <IconBrandTwitter/>
            </a>

            <!-- GitHub -->
            <a 
              href="https://github.com/Aries-IITD" 
              class="group flex items-center justify-center w-10 h-10 rounded-full bg-neutral-800 hover:bg-gray-600 transition-all duration-300"
              aria-label="Follow us on GitHub"
            >
              <IconBrandGithub/>
            </a>

            <!-- LinkedIn -->
            <a 
              href="https://www.linkedin.com/company/aries-artificial-intelligence-society-iitd" 
              class="group flex items-center justify-center w-10 h-10 rounded-full bg-neutral-800 hover:bg-blue-600 transition-all duration-300"
              aria-label="Follow us on LinkedIn"
            >
              <IconBrandLinkedin/>
            </a>

            <!-- Mail -->
            <a 
              href="mailto:aries@iitd.ac.in" 
              class="group flex items-center justify-center w-10 h-10 rounded-full bg-neutral-800 hover:bg-gray-600 transition-all duration-300"
              aria-label="Email us"
            >
              <IconMail/>
          </a>
          </div>
        </div>
      </div>

      <!-- Right side - Email Subscription -->
      <div class="flex flex-col space-y-6">
        <div>
          <h3 class="text-lg font-semibold mb-4 text-white">Stay Updated</h3>
          <p class="text-neutral-400 text-sm mb-4">Get notified about our latest events, workshops, and announcements.</p>
          
          <form class="space-y-3">
            <div class="flex flex-col sm:flex-row gap-3">
              <input 
                type="email" 
                placeholder="Enter your email address"
                class="flex-1 px-4 py-3 bg-neutral-800 border border-neutral-700 rounded-lg text-white placeholder-neutral-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
                required
              />
              <button 
                type="submit"
                class="px-6 py-3 bg-gradient-to-r from-blue-500 to-purple-600 text-white font-medium rounded-lg hover:from-blue-600 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-neutral-900 transition-all duration-200 whitespace-nowrap"
              >
                Explore
              </button>
            </div>
            
            <p class="text-xs text-neutral-500 leading-relaxed">
              By subscribing, you agree to receive promotional emails, event updates, workshop notifications, and other communications from Aries. You can unsubscribe at any time.
            </p>
          </form>
        </div>
      </div>

    </div>

    <!-- Bottom section -->
    <div class="mt-12 pt-8 border-t border-neutral-800 text-center">
      <p class="text-neutral-400 text-sm">
        Â© {new Date().getFullYear()} Aries - The Artificial Intelligence Society of IIT Delhi. All rights reserved.
      </p>
    </div>
  </div>
</footer> 